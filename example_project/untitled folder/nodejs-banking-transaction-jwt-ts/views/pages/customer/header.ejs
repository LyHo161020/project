<header>
    <div class="row">
        <div class="col-sm-5">
            <h1>List of customers Hello</h1>
        </div>
        <div class="col-sm-7">
            <ul class="list-unstyled topnav-menu float-right mb-0" style="float: right; margin-top: 5px;">
                <li class="dropdown notification-list">
                    <a class="nav-link dropdown-toggle nav-user mr-0" data-toggle="dropdown" href="#">
                        <img src="/assets/img/avatar_1.jpg" alt="user-image" class="rounded-circle">
                        <span class="pro-user-name ml-1">
                            <i class="mdi mdi-chevron-down"></i>
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right profile-dropdown">
                        <div class="dropdown-header">
                            <h6 class="text-overflow m-0">Welcome <span id="username" style="color: #ff9900"><%= username %></span> !</h6>
                        </div>

                        <a href="javascript:void(0);" class="dropdown-item notify-item">
                            <i class="fa fa-user"></i>
                            <span>Profile</span>
                        </a>

                        <a href="javascript:void(0);" class="dropdown-item notify-item">
                            <i class="fa fa-cog"></i>
                            <span>Settings</span>
                        </a>

                        <div class="dropdown-divider"></div>

                        <a href="/logout" class="dropdown-item notify-item logout">
                            <i class="fa fa-sign-out"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </li>
            </ul>
            <a class="btn btn-outline-light create-modal"><i class="fa fa-plus-square-o"></i>
                <span>Add New Customer</span></a>
            <a href="/transfers" class="btn btn-outline-light"><i class="fa fa-history"></i> <span>Transfer history</span></a>
        </div>
    </div>
</header>